			"LingerMs": 10,
			"BatchSize": 32768,
			"Acks": "Leader"
		}
	},
	"Logging": {
		"LogLevel": {
			"Default": "Error",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information"
		}
	},
	"Kestrel": {
		"Limits": {
			"MaxConcurrentConnections": 10000,
			"MaxConcurrentUpgradedConnections": 10000,
			"KeepAliveTimeout": "00:05:00",
			"RequestHeadersTimeout": "00:02:00"
		}
	},
	"HttpClient": {
		"ClientName": {
			"BaseAddress": "https://comments-app:8081",
			"MaxConnectionsPerServer": 10000
		}
	},
	"BackgroundRedisOptions": {
		"RedisQueueKey": "comment_queue",
		"BatchSize": 100,
		"SingleProcessingThreshold": 20,
		"RetryDelayMilliseconds": 5000,
		"MaxRetryAttempts": 5
