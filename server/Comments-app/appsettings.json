{
	"ConnectionStrings": {
		"DefaultConnection": "Server=comments-app-db,1433;Database=CommentsApp;User Id=sa;Password=password@123;TrustServerCertificate=True;"
	},
	"Redis": {
		"ConnectionString": "redis:6379",
		"SyncTimeout": 10000,
		"ConnectTimeout": 10000,
		"KeepAlive": 180,
